{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "baseUrl": "src",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@layout/*": ["layout/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["layout/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@core/*": ["core/*"],
      "@context/*": ["context/*"],
      "@styles/*": ["assets/styles/*"]
    },
    "types": ["node"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
